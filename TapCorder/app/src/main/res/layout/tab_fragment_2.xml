<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="#000000">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/Sub_Layout"
        android:background="#FFFFFF">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="02-862-6828"
            android:id="@+id/call"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/policeoffice"
            android:id="@+id/mark_icon"
            android:layout_above="@+id/call"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="약 : 7.17km"
            android:id="@+id/between_distance"
            android:layout_above="@+id/call"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="서울"
            android:textSize ="15dp"
            android:textStyle="bold"
            android:id="@+id/policeStationName"
            android:layout_alignBottom="@+id/mark_icon"
            android:layout_toEndOf="@+id/mark_icon" />
    </RelativeLayout>


    <com.google.android.gms.maps.MapView
        android:id="@+id/gmap"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@+id/Sub_Layout"
        class="com.google.android.gms.maps.MapFragment" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/gmap" />



</RelativeLayout>

