<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="#000000">

    <com.google.android.gms.maps.MapView
        android:id="@+id/gmap"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/gmap" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/Sub_Layout"
        android:layout_below="@id/gmap"
        android:background="#FFFFFF">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="02-862-6828"
            android:id="@+id/call"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/policeoffice"
            android:id="@+id/imageView2"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="ì•½ : 7.17km"
            android:id="@+id/between_distance"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="47dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=""
            android:id="@+id/policeStationName"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />
    </RelativeLayout>

</RelativeLayout>

