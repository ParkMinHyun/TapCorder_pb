<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_layout_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.osm.appdesign21.Pop">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="등록할 보호자의 휴대폰 번호를 입력하세요."
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="('-' 제외)"
        android:textSize="17sp"
        android:textStyle="bold" />
    <!--전화번호부 입력테스트뷰-->
    <EditText
        android:id="@+id/editText_pop"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_above="@+id/btn_store"
        android:layout_alignEnd="@+id/btn_cancel_pop"
        android:layout_alignStart="@+id/btn_store"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:hint="예시) 01011112222"
        android:inputType="phone"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_pop"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:text="취소"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/defaultbtn_bg"/>

        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="15dp"></RelativeLayout>

        <Button
            android:id="@+id/btn_store"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_cancel_pop"
            android:text="저장"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/defaultbtn_bg"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
