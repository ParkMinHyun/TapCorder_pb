<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.osm.appdesign21.Pop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록할 보호자의 휴대폰 번호를 입력하세요."
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="('-' 제외)"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <!--전화번호부 입력테스트뷰-->
    <EditText
        android:id="@+id/editText_pop"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_store"
        android:layout_alignEnd="@+id/btn_cancel_pop"
        android:layout_alignStart="@+id/btn_store"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:hint="예시) 01011112222"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_pop"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:text="취소"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="15dp"></RelativeLayout>

        <Button
            android:id="@+id/btn_store"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_cancel_pop"
            android:text="저장"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
