<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f3f3f7" />
        </shape>
    </item>


    <!--left-->
    <item
        android:bottom="-5dp"
        android:top="-5dp"
        android:right="-5dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1.5dp"
                android:color="#a7aac5" />
        </shape>
    </item>

    <!--right-->
    <item
        android:bottom="-5dp"
        android:left="-5dp"
        android:top="-5dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1.5dp"
                android:color="#a7aac5" />
        </shape>
    </item>

</layer-list>