<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">#4d7aad</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">#769fcd</item>
        <!--<item name="selectableItemBackground">@drawable/selectable_item_background</item>-->
        <!--<item name="android:selectableItemBackground">@drawable/selectable_item_background</item>-->
    </style>

    <style name="FabSettings_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_margin">@dimen/spacing_large</item>-->
        <item name="android:src">@drawable/settings</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="FabPhoneAddr_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_margin">@dimen/spacing_large</item>-->
        <item name="android:src">@drawable/phoneaddr_img</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <color name="primary">#00BCD4</color>
    <color name="primary_dark">#00808e</color>
    <color name="accent">#00808e</color>
    <color name="accent_translucent">#4ca6af</color>
    <color name="accent_bright">#7fbfc6</color>
    <!--<color name="accent">#FFEB3B</color>-->
    <!--<color name="accent_translucent">#80FFEB3B</color>-->
    <!--<color name="accent_bright">#FFF493</color>-->

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/primary_dark</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primary_dark</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
